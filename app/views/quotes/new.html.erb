<main class="main">
  <div class="header">
    <%= link_to quotes_path, class: "flex gap-2 items-center" do %>
      <%= image_tag "arrow_back.svg", class: "flex size-6" %>
      <p class="title">Back to quotes</p>
    <% end %>
  </div>
  <hr class="divider">
  <div class="grid w-1/2 p-6 gap-6">
    <h1 class="subtitle">New quote</h1>
    <%= turbo_frame_tag @quote do %>
      <div class="p-4">
        <%= render "form", quote: @quote %>
      </div>
    <% end %>
  </div>
</main>
